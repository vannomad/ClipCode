<Window x:Class="ClipCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipCode"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="243" Width="300"
        ShowInTaskbar="False"
>
    <Grid>
        <tb:TaskbarIcon
            x:Name="TrayIcon"
            Visibility="Visible"
            IconSource="Resources/qrcode-scan.ico" TrayMouseDoubleClick="TrayIcon_OnTrayMouseDoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="MenuScan" Header="Scan Clipboard" Click="MenuScan_OnClick" />
                    <MenuItem Header="Settings" IsEnabled="False" />
                    <MenuItem Header="About" />
                    <MenuItem x:Name="MenuQuit" Header="Quit" Click="MenuQuit_OnClick" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
